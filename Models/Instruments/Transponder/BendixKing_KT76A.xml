<PropertyList>

<path>BendixKing_KT76A.ac</path>
	
<!-- PANEL LIGHTING -->

<animation>
    <type>material</type>
    <object-name>PerillaCod_01</object-name>
    <object-name>PerillaCod_02</object-name>
    <object-name>PerillaCod_03</object-name>
    <object-name>PerillaCod_04</object-name>
    <object-name>Digit_01</object-name>
    <object-name>Digit_02</object-name>
    <object-name>Digit_03</object-name>
    <object-name>Digit_04</object-name>
    <object-name>PerillaON</object-name>
    <emission>
        <red>0.7</red>
        <green>0.7</green>
        <blue>0.7</blue>
        <factor-prop>controls/lighting/panel-norm</factor-prop>
    </emission>
</animation> 	

<animation>
    <type>material</type>
	<object-name>BtnIdent</object-name>
    <emission>
        <red>0.5</red>
        <green>0.5</green>
        <blue>0.5</blue>
        <factor-prop>controls/lighting/panel-norm</factor-prop>
    </emission>
</animation> 	

<!-- FUNCTION SELECTOR -->

<animation>
	<type>knob</type>
	<object-name>PerillaON</object-name>
	<visible>true</visible>
    <drag-scale-px>20</drag-scale-px>
    <action>
       <binding>
         <command>property-cycle</command>
         <property>/instrumentation/transponder/inputs/knob-mode</property>
         <wrap>0</wrap>
         <value>0</value> <!-- OFF -->
         <value>1</value> <!-- SBY -->
         <value>4</value> <!-- ON  -->
         <value>5</value> <!-- ALT -->
         <value>2</value> <!-- TST -->
       </binding>
    </action>
</animation>        

<animation>
	<type>rotate</type>
	<object-name>PerillaON</object-name>
    <property>instrumentation/transponder/inputs/knob-mode</property>
    <factor>1</factor>
    <interpolation>
      <entry>
        <ind>0</ind><dep>-90</dep>
      </entry>
      <entry>
        <ind>1</ind><dep>-45</dep>
      </entry>
      <entry>
        <ind>4</ind><dep>0</dep>
      </entry>
      <entry>
        <ind>5</ind><dep>45</dep>
      </entry>
      <entry>
        <ind>2</ind><dep>90</dep>
      </entry>
    </interpolation>
	<axis>
		<x>-1</x>
		<y>0</y>
		<z>0</z>
	</axis>
	<center>
		<x-m>0.00483</x-m>
		<y-m>-0.05936</y-m>
		<z-m>0.00254</z-m>
	</center>
</animation>

<!-- IDENT BUTTON -->

<animation>
	<type>pick</type>
	<object-name>BtnIdent</object-name>
	<visible>true</visible>
	<action>
		<button>0</button>
		<repeatable>false</repeatable>
		<binding>
			<command>property-assign</command>
			<property>instrumentation/transponder/inputs/ident-btn</property>
			<value type="int">1</value>
		</binding>
		<mod-up>
			<binding>
				<command>property-assign</command>
                <property>instrumentation/transponder/inputs/ident-btn</property>
				<value type="int">0</value>
			</binding>
		</mod-up>
	</action>
</animation>

<animation>
	<type>translate</type>
	<object-name>BtnIdent</object-name>
    <property>instrumentation/transponder/inputs/ident-btn</property>
	<factor>-0.0015</factor>
	<axis>
		<x>1.0</x>
		<y>0.0</y>
		<z>0.0</z>
	</axis>
</animation>

<!-- LIGHTS -->

<!-- See Nasal/transponder.nas -->

<animation>
    <object-name>PowerLightOff</object-name>
    <type>select</type>
    <condition>
