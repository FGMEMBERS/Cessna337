<PropertyList>

	<path>KI-227.ac</path>

<params>
	<model>instrumentation/adf[0]/model</model>
	<rotation-deg>instrumentation/adf[0]/rotation-deg</rotation-deg>
	<adf-bearing-deg>instrumentation/adf[0]/indicated-bearing-deg</adf-bearing-deg>
	<vor-bearing-deg>instrumentation/nav[0]/radials/reciprocal-radial-deg</vor-bearing-deg>
	<indicated-heading>instrumentation/heading-indicator/indicated-heading-deg</indicated-heading>
</params>

<animation>
	<type>material</type>
	<object-name>Ring</object-name>
	<object-name>Base_02</object-name>
	<object-name>Marker</object-name>
	<object-name>Knob</object-name>
	<object-name>Aircraft</object-name>
	<object-name>Needle</object-name>
	<emission>
		<red>0.7</red>
		<green>0.7</green>
		<blue>0.7</blue>
		<factor-prop>controls/lighting/panel-norm</factor-prop>  <!-- <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop> -->
	</emission>
</animation>

<animation>
	<type>rotate</type>
	<object-name>Ring</object-name>
	<property alias="../../params/rotation-deg"/>
	<condition>
		<not>
			<equals>
				<property alias="../../../../../params/model"/>
				<value>ki228</value>
			</equals>
		</not>
	</condition>
	<factor>-1</factor>
	<axis>
		<x>-1</x>
		<y>0</y>
		<z>0</z>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>Ring</object-name>
	<property alias="../../params/indicated-heading"/>
	<condition>
		<equals>
			<property alias="../../../../params/model"/>
			<value>ki228</value>
		</equals>
	</condition>
	<factor>-1</factor>
	<axis>
		<x>-1</x>
		<y>0</y>
		<z>0</z>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>Needle</object-name>
	<property alias="../../params/adf-bearing-deg"/>
	<axis>
		<x>-1</x>
		<y>0</y>
		<z>0</z>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>Knob</object-name>
	<property alias="../../params/rotation-deg"/>
	<factor>8.0</factor>
	<axis>
		<x>1.0</x>
		<y>0.0</y>
		<z>0.0</z>
	</axis>
	<center>
		<x-m> 0    </x-m>
		<y-m>-0.032</y-m>
		<z-m>-0.028</z-m>
	</center>
</animation>

<animation>
	<type>pick</type>
	<object-name>Knob</object-name>
	<visible>true</visible>
	<action>
		<name>Small up</name>
		<button>0</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-adjust</command>
			<property alias="../../../../params/rotation-deg"/>
				<step> 1</step>
				<min>  0</min>
				<max>360</max>
				<wrap>1</wrap>
		</binding>
	</action>
	<action>
		<name>Small down</name>
		<button>1</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-adjust</command>
			<property alias="../../../../params/rotation-deg"/>
				<step>-1</step>
				<min>  0</min>
				<max>360</max>
				<wrap>1</wrap>
		</binding>
	</action>
	<action>
		<name>Big up</name>
		<button>3</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-adjust</command>
			<property alias="../../../../params/rotation-deg"/>
				<step> 5</step>
				<min>  0</min>
				<max>360</max>
				<wrap>1</wrap>
		</binding>
	</action>
	<action>
		<name>Big down</name>
		<button>4</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-adjust</command>
			<property alias="../../../../params/rotation-deg"/>
				<step>-5</step>
				<min>  0</min>
				<max>360</max>
				<wrap>1</wrap>
		</binding>
	</action>
</animation>
