<?xml version="1.0" encoding="UTF-8"?>

<!--
Radar Altimeter, based on Bendix-King KI-250 model
http://commerce.honeywell.com/
Author: Pavel Cueto, adapted from the original work of Torsten Dreyer
License: GPL
-->

<PropertyList>

	<path>BendixKing_KI250.ac</path>

<animation>
	<type>material</type>
	<object-name>Base_02</object-name>
	<object-name>Needle</object-name>
	<object-name>DH_Marker</object-name>
	<emission>
		<red>0.7</red>         
		<green>0.7</green>     
		<blue>0.7</blue>         
		<factor-prop>controls/lighting/panel-norm</factor-prop>
	</emission>
</animation>
  
<animation>
	<type>material</type>
	<object-name>Knob</object-name>    
	<emission>
		<red>0.3</red>
		<green>0.3</green>
		<blue>0.3</blue>
		<factor-prop>controls/lighting/panel-norm</factor-prop>
	</emission>
</animation>

<animation>
	<type>material</type>
	<object-name>DH_Alrm</object-name>
	<emission>
		<red>  1</red>
		<green>1</green>
		<blue> 1</blue>
	</emission>
	<condition>
		<less-than>
			<property>/position/altitude-agl-ft</property>
			<property>/instrumentation/radar-altimeter/decision-height</property>
		</less-than>
	</condition>
</animation>

<animation>
	<type>rotate</type>
	<object-name>Needle</object-name>
	<property>/position/altitude-agl-ft</property>
	<interpolation>
		<entry><ind>-9999</ind><dep>0</dep></entry>
		<entry><ind>    0</ind><dep>   0</dep></entry>
		<entry><ind>  500</ind><dep>-160</dep></entry>
		<entry><ind> 1000</ind><dep>-180</dep></entry>
		<entry><ind> 1500</ind><dep>-200</dep></entry>
		<entry><ind> 2000</ind><dep>-220</dep></entry>
		<entry><ind> 2500</ind><dep>-240</dep></entry>
		<entry><ind> 3000</ind><dep>-260</dep></entry>
		<entry><ind>30000</ind><dep>-260</dep></entry>
	</interpolation>
	<axis>
		<x>1.0</x>
		<y>0.0</y>
		<z>0.0</z>
	</axis>
	<center>
		<x-m>0</x-m>
		<y-m>0</y-m>
		<z-m>0</z-m>
	</center>
</animation>

<animation>
	<type>pick</type>
	<object-name>Knob</object-name>
	<visible>true</visible>
	<action>
		<name>Small up</name>
		<button>0</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-adjust</command>
			<property>/instrumentation/radar-altimeter/decision-height</property>
				<step> 10</step>
				<min>   0</min>
				<max>2500</max>
				<wrap>false</wrap>
		</binding>
	</action>
	<action>
		<name>Small down</name>
		<button>1</button>
		<repeatable>true</repeatable>
		<binding>
			<command>property-adjust</command>
			<property>/instrumentation/radar-altimeter/decision-height</property>
				<step>-10</step>
				<min>   0</min>
				<max>2500</max>
				<wrap>false</wrap>
		</binding>
	</action>
	<action>
		<name>Big up</name>
		<button>3</button>
		<repeatable>false</repeatable>
		<binding>
			<command>property-adjust</command>
			<property>/instrumentation/radar-altimeter/decision-height</property>
				<step> 100</step>
				<min>    0</min>
				<max> 2500</max>
				<wrap>false</wrap>
		</binding>
	</action>
	<action>
		<name>Big down</name>
		<button>4</button>
		<repeatable>false</repeatable>
		<binding>
			<command>property-adjust</command>
			<property>/instrumentation/radar-altimeter/decision-height</property>
				<step>-100</step>
				<min>    0</min>
				<max> 2500</max>
				<wrap>false</wrap>
		</binding>
	</action>
</animation>

<animation>
	<type>rotate</type>
	<object-name>DH_Marker</object-name>
	<property>/instrumentation/radar-altimeter/decision-height</property>
	<interpolation>
		<entry><ind>    0</ind><dep>   0</dep></entry>
		<entry><ind>  500</ind><dep>-160</dep></entry>
		<entry><ind> 1000</ind><dep>-180</dep></entry>
		<entry><ind> 1500</ind><dep>-200</dep></entry>
		<entry><ind> 2000</ind><dep>-220</dep></entry>
		<entry><ind> 2500</ind><dep>-240</dep></entry>
	</interpolation>
	<axis>
		<x>1.0</x>
		<y>0.0</y>
		<z>0.0</z>
	</axis>
	<center>
		<x-m>0</x-m>
		<y-m>0</y-m>
		<z-m>0</z-m>
	</center>
</animation>

	<!-- Label Text -->

<text>
	<name>LabelText</name>
	<type type="string">literal</type>
		<text type="string">Radar Altimeter</text>
	<draw-text type="bool">true</draw-text>
	<font>Helvetica.txf</font>
		<character-size type="double">0.012</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
	<axis-alignment>yz-plane</axis-alignment>
	<max-height>0.2</max-height>
	<max-width>0.07</max-width>
	<font-resolution>
		<width type="int">32</width>
		<height type="int">32</height>
	</font-resolution>
	<alignment>center-center</alignment>
	<offsets>
		<x-m> 0.01</x-m>
		<y-m> 0.0 </y-m>
		<z-m> 0.0 </z-m>
	</offsets>
</text>

<animation>
	<type>material</type>
		<object-name>LabelText</object-name>
	<emission>
		<red>1.0</red>
		<green>0.8</green>
		<blue>0.0</blue>
	</emission>
</animation>

<animation>
	<type>select</type>
		<object-name>LabelText</object-name>
	<condition>
		<property>/sim/panel-hotspots</property>
	</condition>
</animation>

</PropertyList>