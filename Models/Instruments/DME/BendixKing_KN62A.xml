    <object-name>Digit_04</object-name>
    <property alias="../../params/center-display"/>
    <step>100</step>
    <factor>0.001</factor>
    <axis>
        <x>1</x>
        <y>0</y>
        <z>0</z>
    </axis>
</animation>

<animation>
    <name>center_10</name>
    <type>textranslate</type>
    <object-name>Digit_05</object-name>
    <property alias="../../params/center-display"/>
    <step>10</step>
    <factor>0.01</factor>
    <axis>
        <x>1</x>
        <y>0</y>
        <z>0</z>
    </axis>
</animation>

<animation>
    <name>center_1</name>
    <type>textranslate</type>
    <object-name>Digit_06</object-name>
    <property alias="../../params/center-display"/>
    <step>1</step>
    <factor>0.1</factor>
    <axis>
        <x>1</x>
