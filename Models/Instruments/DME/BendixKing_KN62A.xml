</animation>

<!-- RIGHT DISPLAY -->

<animation>
    <name>right_10</name>
    <type>textranslate</type>
    <object-name>Digit_07</object-name>
    <property alias="../../params/right-display"/>
    <step>10</step>
    <factor>0.01</factor>
    <axis>
        <x>1</x>
        <y>0</y>
        <z>0</z>
    </axis>
</animation>

<animation>
    <name>right_1</name>
    <type>textranslate</type>
    <object-name>Digit_08</object-name>
    <property alias="../../params/right-display"/>
    <step>1</step>
    <factor>0.1</factor>
    <axis>
        <x>1</x>
