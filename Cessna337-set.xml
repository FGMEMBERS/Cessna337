		</livery>
	</model> 

	<yokes-visible type="bool">1</yokes-visible>

	<menubar include="Dialogs/Cessna337-menu.xml"/>
	<help include="Dialogs/Cessna337-help.xml"/>

	<systems>
		<path>Aircraft/Cessna337/Systems/Cessna337-systems.xml</path>
		<property-rule>
			<name>Instrument-Filter</name>
			<path>Aircraft/Cessna337/Systems/Cessna337-filters.xml</path>
		</property-rule>
	</systems>

	<instrumentation>
		<path>Aircraft/Cessna337/Systems/Cessna337-instrumentation.xml</path>
	</instrumentation>
</sim>

